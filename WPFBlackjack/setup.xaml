<Window x:Class="WPFBlackjack.setup"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WPFBlackjack"
        mc:Ignorable="d"
        Title="Setup" Height="331" Width="480" WindowStartupLocation="CenterScreen">
    <Grid>
        <Label Content="Select number of players" HorizontalAlignment="Left" Margin="36,42,0,0" VerticalAlignment="Top"/>
        <Label Content="Select number of decks" HorizontalAlignment="Left" Margin="36,131,0,0" VerticalAlignment="Top"/>
        <ComboBox x:Name="cBoxPlayers" HorizontalAlignment="Left" Margin="249,44,0,0" VerticalAlignment="Top" Width="139" SelectedIndex="0"/>
        <ComboBox x:Name="cBoxDecks" HorizontalAlignment="Left" Margin="249,135,0,0" VerticalAlignment="Top" Width="139" SelectedIndex="0"/>
        <Button x:Name="btnStart" Click="btnStart_Click" Content="Start Game" HorizontalAlignment="Left" Margin="249,218,0,0" VerticalAlignment="Top" Height="44" Width="139"/>

    </Grid>
</Window>
