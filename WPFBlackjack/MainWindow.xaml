<Window x:Class="WPFBlackjack.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WPFBlackjack"
        mc:Ignorable="d"
        Title="Blackjack by Christopher O'Driscoll" Height="600" Width="1200">
    <Grid>
        <Grid x:Name="mainGrid" Background="{DynamicResource {x:Static SystemColors.ActiveBorderBrushKey}}">
            <Grid.RowDefinitions>
                <RowDefinition Height="10"/>
                <RowDefinition/>
                <RowDefinition Height="10"/>
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="10"/>
                <ColumnDefinition Width="4*"/>
                <ColumnDefinition/>
                <ColumnDefinition Width="10"/>
            </Grid.ColumnDefinitions>
            <Grid x:Name="ViewGrid" Grid.Column="1" Grid.Row="1" Background="{DynamicResource {x:Static SystemColors.ControlBrushKey}}">
                <Grid.RowDefinitions>
                    <RowDefinition Height="3*"/>
                    <RowDefinition/>
                </Grid.RowDefinitions>
                <Canvas x:Name="tableCanvas" Background="#FF629765">
                    <Border BorderBrush="Black" BorderThickness="1" Height="100" Width="70" Canvas.Left="814" Canvas.Top="280" HorizontalAlignment="Left" VerticalAlignment="Center">
                        <Border.Background>
                            <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                                <GradientStop Color="Black" Offset="1"/>
                                <GradientStop Color="White"/>
                            </LinearGradientBrush>
                        </Border.Background>
                    </Border>
                    <Border BorderBrush="Black" BorderThickness="1" Height="100" Width="70" Canvas.Left="839" Canvas.Top="305" HorizontalAlignment="Left" VerticalAlignment="Top" Panel.ZIndex="1">
                        <Border.Background>
                            <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                                <GradientStop Color="Black" Offset="1"/>
                                <GradientStop Color="White"/>
                            </LinearGradientBrush>
                        </Border.Background>
                    </Border>
                    <Border BorderBrush="Black" BorderThickness="1" Height="100" Width="70" Canvas.Left="814" Canvas.Top="35" HorizontalAlignment="Left" VerticalAlignment="Top">
                        <Border.Background>
                            <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                                <GradientStop Color="Black" Offset="1"/>
                                <GradientStop Color="White"/>
                            </LinearGradientBrush>
                        </Border.Background>
                    </Border>
                    <Border BorderBrush="Black" BorderThickness="1" Height="100" Width="70" Canvas.Left="839" Canvas.Top="60" HorizontalAlignment="Left" VerticalAlignment="Top" Panel.ZIndex="1">
                        <Border.Background>
                            <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                                <GradientStop Color="Black" Offset="1"/>
                                <GradientStop Color="White"/>
                            </LinearGradientBrush>
                        </Border.Background>
                    </Border>
                    <Border BorderBrush="Black" BorderThickness="1" Height="100" Width="70" Canvas.Left="35" Canvas.Top="35" HorizontalAlignment="Left" VerticalAlignment="Center">
                        <Border.Background>
                            <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                                <GradientStop Color="Black" Offset="1"/>
                                <GradientStop Color="White"/>
                            </LinearGradientBrush>
                        </Border.Background>
                    </Border>
                    <Border BorderBrush="Black" BorderThickness="1" Height="100" Width="70" Canvas.Left="60" Canvas.Top="60" HorizontalAlignment="Left" VerticalAlignment="Top" Panel.ZIndex="1">
                        <Border.Background>
                            <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                                <GradientStop Color="Black" Offset="1"/>
                                <GradientStop Color="White"/>
                            </LinearGradientBrush>
                        </Border.Background>
                    </Border>
                    <Border BorderBrush="Black" BorderThickness="1" Height="100" Width="70" Canvas.Left="60" Canvas.Top="305" HorizontalAlignment="Left" VerticalAlignment="Top" Panel.ZIndex="1">
                        <Border.Background>
                            <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                                <GradientStop Color="Black" Offset="1"/>
                                <GradientStop Color="White"/>
                            </LinearGradientBrush>
                        </Border.Background>
                    </Border>
                    <Border BorderBrush="Black" BorderThickness="1" Height="100" Width="70" Canvas.Left="35" Canvas.Top="280" HorizontalAlignment="Left" VerticalAlignment="Bottom" Margin="0,0,0,35">
                        <Border.Background>
                            <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                                <GradientStop Color="Black" Offset="1"/>
                                <GradientStop Color="White"/>
                            </LinearGradientBrush>
                        </Border.Background>
                    </Border>
                    <Border BorderBrush="Black" BorderThickness="1" Height="100" Width="70" Canvas.Left="437" Canvas.Top="162" HorizontalAlignment="Left" VerticalAlignment="Top">
                        <Border.Background>
                            <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                                <GradientStop Color="Black" Offset="1"/>
                                <GradientStop Color="White"/>
                            </LinearGradientBrush>
                        </Border.Background>
                    </Border>
                    <Border x:Name="bdrDealerCard1" BorderBrush="Black" BorderThickness="1" Height="100" Width="70" Canvas.Left="462" Canvas.Top="187" HorizontalAlignment="Left" VerticalAlignment="Top" Panel.ZIndex="1">
                        <Border.Background>
                            <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                                <GradientStop Color="Black" Offset="1"/>
                                <GradientStop Color="White"/>
                            </LinearGradientBrush>
                        </Border.Background>
                    </Border>
                    <Border BorderBrush="Black" BorderThickness="1" Height="100" Width="70" Canvas.Left="17" Canvas.Top="436" HorizontalAlignment="Left" VerticalAlignment="Top">
                        <Border.Background>
                            <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                                <GradientStop Color="Black" Offset="1"/>
                                <GradientStop Color="White"/>
                            </LinearGradientBrush>
                        </Border.Background>
                    </Border>
                    <Border BorderBrush="Black" BorderThickness="1" Height="100" Width="70" Canvas.Left="52" Canvas.Top="436" HorizontalAlignment="Left" VerticalAlignment="Center">
                        <Border.Background>
                            <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                                <GradientStop Color="Black" Offset="1"/>
                                <GradientStop Color="White"/>
                            </LinearGradientBrush>
                        </Border.Background>
                    </Border>
                </Canvas>
                <Canvas x:Name="playerCanvas" Grid.Row="1" Background="#FFC08D8D" Panel.ZIndex="-1">
                    <Button Content="Hit" Click="Button_Click" Canvas.Left="559" Canvas.Top="13"/>
                    <Button Content="Stand" Click="Button_Click_1"  Canvas.Left="569" Canvas.Top="51"/>
                    <Button Content="Surrender" Click="Button_Click_2" Canvas.Left="559" Canvas.Top="87"/>
                    <ListBox x:Name="lstPlayerCards" Height="120" Width="200" d:ItemsSource="{d:SampleData ItemCount=5}" HorizontalAlignment="Left" VerticalAlignment="Top" Canvas.Left="272" Canvas.Top="11"/>
                </Canvas>
            </Grid>
            <Grid x:Name="infoGrid" Grid.Column="2" Grid.Row="1" Background="{DynamicResource {x:Static SystemColors.ActiveCaptionBrushKey}}">
                <Grid.RowDefinitions>
                    <RowDefinition/>
                    <RowDefinition/>
                    <RowDefinition/>
                    <RowDefinition/>
                    <RowDefinition/>
                    <RowDefinition/>
                    <RowDefinition/>
                    <RowDefinition/>
                </Grid.RowDefinitions>
                <Label Content="Number of Decks" HorizontalAlignment="Left" Margin="10,0,0,0" VerticalAlignment="Center"/>
                <Label Content="Cards in Shoe" HorizontalAlignment="Left" Margin="10,0,0,0" Grid.Row="1" VerticalAlignment="Center"/>
                <Label Content="Number of Players" HorizontalAlignment="Left" Margin="10,0,0,0" Grid.Row="2" VerticalAlignment="Center"/>
                <Label Content="Used cards" HorizontalAlignment="Left" Margin="10,0,0,0" Grid.Row="3" VerticalAlignment="Center"/>
                <Label Content="Time to shuffle" HorizontalAlignment="Left" Margin="10,10,0,0" Grid.Row="4" VerticalAlignment="Center"/>
                <TextBlock x:Name="txtNumberDecks" HorizontalAlignment="Right" Margin="0,0,10,0" TextWrapping="Wrap" VerticalAlignment="Center"/>
                <Label x:Name="lblDecks" Content="Label" HorizontalAlignment="Left" Margin="180,37,0,0" VerticalAlignment="Top"/>
                <Label x:Name="lblCardsInShoe" Content="Label" HorizontalAlignment="Left" Margin="180,0,0,0" Grid.Row="1" VerticalAlignment="Center"/>
                <Label x:Name="lblPlayerCount" Content="Label" HorizontalAlignment="Left" Margin="180,0,0,0" Grid.Row="2" VerticalAlignment="Center"/>
                <Label x:Name="lblUsedCards" Content="Label" HorizontalAlignment="Left" Margin="180,0,0,0" Grid.Row="3" VerticalAlignment="Center"/>
                <Label x:Name="lblShuffle" Content="Label" HorizontalAlignment="Left" Margin="180,0,0,0" Grid.Row="4" VerticalAlignment="Center"/>
                <Button HorizontalAlignment="Center" Margin="0,37,0,0" Grid.Row="5" VerticalAlignment="Top">
                    <Button x:Name="btnDeal" Content="Deal" Click="btnDeal_Click"/>
                </Button>
                <Button Content="Button"/>
            </Grid>
        </Grid>

    </Grid>
</Window>
